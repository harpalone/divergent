extends ../layouts/main

block content
  .main_container(ng-app='Registration', ng-controller='RegistrationController')
    h1= title
    .notice(ng-show='notice') {{ notice }}
    form(name='user_registration_form' novalidate)
      .form-group
        lable Name
        input.form-control(type='text' name='name' ng-model='user.name' required)
        .has-error(ng-show='user_registration_form.name.$touched && user_registration_form.name.$invalid')
          span.help-block User name can't be blank

      .form-group
        lable Email
        input.form-control(type='email' name='email' ng-model='user.email' required)
        .has-error(ng-show='user_registration_form.email.$touched && user_registration_form.email.$invalid')
          span.help-block Invalid email address

      .form-group
        lable Password
        input.form-control(type='password' name='password' ng-model='user.password' required minlength=8)
        .has-error(ng-show='user_registration_form.password.$touched && user_registration_form.password.$invalid')
          span.help-block Password must contain atleast 8 charactor

      .form-group
        lable Confirm Password
        input.form-control(type='password' name='confirm_password' ng-model='user.confirm_password' repeat-password="password" required)
        .has-error(ng-show='user_registration_form.confirm_password.$touched && user_registration_form.confirm_password.$invalid')
          span.help-block Password not match

      button.btn.btn-primary(type='submit' ng-model='submit' ng-disabled='user_registration_form.$invalid' ng-click='submit_form()') Submit

